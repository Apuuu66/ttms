<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="jdbc.properties"/>
    <context id="DB2Tables" targetRuntime="MyBatis3">

        <jdbcConnection
                driverClass="${jdbc.driver}"
                connectionURL="${jdbc.url}"
                userId="${jdbc.username}"
                password="${jdbc.password}">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- targetProject:生成PO类的位置 -->
        <javaModelGenerator targetPackage="com.kevin.pojo" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- targetPackage:mapper映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="com.kevin.dao" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>
        <!-- targetPackage：mapper接口的生成位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.kevin.dao" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table tableName="data_dict"/>
        <table tableName="employee"/>
        <table tableName="play"/>
        <table tableName="sale"/>
        <table tableName="sale_item"/>
        <table tableName="schedule"/>
        <table tableName="seat"/>
        <table tableName="studio"/>
        <table tableName="ticket"/>
        <table tableName="user"/>

    </context>
</generatorConfiguration>